{
    "name": "Code2MD-Wizwam",
    "displayName": "Code2MD by Wizwam",
    "description": "Code2MD is a tool for converting your code into a consolidated .md doc for communicating with an AI",
    "version": "0.0.1",
    "publisher": "WIZWAM",
    "repository": {
        "type": "git",
        "url": "https://github.com/lukejmorrison/code2md"
    },
    "icon": "images/code2md-icon.png",
    "author": {
        "name": "Luke Morrison",
        "url": "https://github.com/lukejmorrison"
    },
    "license": "MIT",
    "keywords": [
        "markdown",
        "code",
        "AI",
        "documentation",
        "converter"
    ],
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": ["Other"],
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:code2md.generateMarkdown",
        "onCommand:code2md.generateMarkdownContext",
        "onCommand:code2md.generateMarkdownFromFolder"
    ],
    "contributes": {
        "commands": [
            {
                "command": "code2md.generateMarkdown",
                "title": "Generate Markdown from Files"
            },
            {
                "command": "code2md.generateMarkdownContext",
                "title": "Generate Markdown from Selected Files"
            },
            {
                "command": "code2md.generateMarkdownFromFolder",
                "title": "Generate Markdown from Folder"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "code2md.generateMarkdownContext",
                    "group": "navigation",
                    "when": "resourceScheme == file"
                },
                {
                    "command": "code2md.generateMarkdownContext",
                    "group": "navigation",
                    "when": "explorerResourceIsFolder && explorerResourceIsRoot"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.x",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.3"
    }
} 